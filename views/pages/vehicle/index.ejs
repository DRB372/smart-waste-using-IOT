<div class="row">
    <div class="col-md-12 col-sm-12 ">
      <div class="x_panel">
        <div class="x_title">
          <h2>Running<small>Vehicles</small></h2>
          <ul class="nav navbar-right panel_toolbox">
            <li>
              <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>
            <li class="dropdown">
              <a
                href="#"
                class="dropdown-toggle"
                data-toggle="dropdown"
                role="button"
                aria-expanded="false"
                ><i class="fa fa-wrench"></i
              ></a>
              <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" href="#">Settings 1</a>
                <a class="dropdown-item" href="#">Settings 2</a>
              </div>
            </li>
            <li>
              <a class="close-link" href="/"><i class="fa fa-close"></i></a>
            </li>
          </ul>
          <div class="clearfix"></div>
        </div>
        <div class="x_content">
          <div class="row">
            <div class="col-sm-12">
              <div class="card-box table-responsive"> 
                <table
                  id="datatable-vehicles"
                  class="table table-striped table-bordered dt-responsive nowrap"
                  cellspacing="0"
                  width="100%"
                >
                  <thead>
                    <tr>
                      <th>#</th>
                      <th>UID</th>
                      <th>Name</th>
                      <th>Registration Number</th>
                      <th>Model</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if(vehicles.length>0) {vehicles.forEach((vehicle, index) => { %>
                    <tr>
                      <td><%= index + 1 %></td>
                      <td><%= vehicle.vehicle_id %></td>
                      <td><%= vehicle.full_name %></td>
                      <td><%= vehicle.reg_no %></td>
                      <td><%= vehicle.model %></td>
                      <td>
                        <a class="text-info" href="/vehicle/details/<%= vehicle.vehicle_id %>"
                          >View</a
                        >
                        | <a href="/vehicle/edit/<%= vehicle.vehicle_id %>">Edit</a> |
                       
                          <a class="text-danger" href="/vehicle/delete/<%= vehicle.vehicle_id %>">Delete</a>
                      
                      </td>
                    </tr>
                    <% });} else { %>
                    <tr>
                      No record found
                    </tr>
                    <% } %>
                  </tbody>
                </table>      
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script>
    $(document).ready(function() {
      $('#datatable-vehicles').DataTable({
        columnDefs: [
          {
            targets: [1],
            visible: false,
            searchable: false,
          },
          {
            targets: [-1],
            searchable: false,
            orderable: false,
          },
        ],
      });
    });
    </script>
   