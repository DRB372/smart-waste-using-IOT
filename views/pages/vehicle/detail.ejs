<div class="row">
  <div class="col-md-12 col-sm-12">
    <div class="x_panel">
      <div class="x_title">
        <h2><%= toProperCase(title) %><small>Vehicle Details</small></h2>
        <ul class="nav navbar-right panel_toolbox">
          <li>
            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
          </li>
          <li class="dropdown">
            <a
              href="#"
              class="dropdown-toggle"
              data-toggle="dropdown"
              role="button"
              aria-expanded="false"
              ><i class="fa fa-cog" aria-hidden="true"></i
            ></a>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
              <a class="dropdown-item" href="/vehicle/edit/<%= vehicle.vehicle_id %>"
                >Edit Details</a
              >
              <a class="dropdown-item" href="/vehicle/delete/<%= vehicle.vehicle_id %>">Delete</a>
            </div>
          </li>
          <li>
            <a class="close-link" href="/vehicle"><i class="fa fa-close"></i></a>
          </li>
        </ul>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <ul class="nav nav-tabs bar_tabs" id="myTab" role="tablist">
          <li class="nav-item">
            <a
              class="nav-link active"
              id="home-tab"
              data-toggle="tab"
              href="#home"
              role="tab"
              aria-controls="home"
              aria-selected="true"
              >Home</a
            >
          </li>
          
        </ul>
        <div class="tab-content" id="myTabContent">
          <div
            class="tab-pane fade show active"
            id="home"
            role="tabpanel"
            aria-labelledby="home-tab"
          >
            <div class="col-md-4 widget widget_tally_box">
              <div class="x_panel">
                <div class="x_content">
                  <h4 class="name"> <span style="padding:10px" class="fa fa-car"></span><%= toProperCase(vehicle.full_name || 'N/A') %></h4>
                 
                  <img
                          src="<%= vehicle.avatar ? `/vehicle/avatar/${vehicle.avatar}` : '/img/placeholder-avatar.png' %>"
                          alt="..." height="100%" width="100%"
                        />
  
                </div>
              </div>
            </div>

            <div class="col-md-8">
              <div class="x_panel ">
                <div class="x_content ">
                  <table class="table">
                    <tbody>
                      <tr>
                        <th scope="row">Full Name</th>
                        <td><%= toProperCase(vehicle.full_name) %></td>
                      </tr>
                      <tr>
                        <th scope="row">Registration Number</th>
                        <td><%= toProperCase(vehicle.reg_no) %></td>
                      </tr>
                      <tr>
                        <th scope="row">Model</th>
                        <td><%= vehicle.model %></td>
                      </tr>
                      <tr>
                        <th scope="row">Remarks</th>
                        <td><%= vehicle.remarks %></td>
                      </tr>
                      <tr>
                        <th scope="row">Created At</th>
                        <td><%= vehicle.created_at.toLocaleString() %></td>
                      </tr>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
          
        </div>
      </div>
    </div>
  </div>
</div>
