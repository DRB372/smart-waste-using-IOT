<div class="row">
  <div class="col-md-12 col-sm-12 ">
    <div class="x_panel">
      <div class="x_title">
        <h2>Ongoing<small>Tracks</small></h2>
        <ul class="nav navbar-right panel_toolbox">
          <li>
            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
          </li>
          <li class="dropdown">
            <a
              href="#"
              class="dropdown-toggle"
              data-toggle="dropdown"
              role="button"
              aria-expanded="false"
              ><i class="fa fa-wrench"></i
            ></a>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
              <a class="dropdown-item" href="#">Settings 1</a>
              <a class="dropdown-item" href="#">Settings 2</a>
            </div>
          </li>
          <li>
            <a class="close-link" href="/"><i class="fa fa-close"></i></a>
          </li>
        </ul>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <div class="row">
          <div class="col-sm-12">
            <div class="card-box table-responsive">
              <p class="text-muted font-13 m-b-30">Displaying all the active Tracks.</p>

              <table
                id="datatable-tracks"
                class="table table-striped table-bordered dt-responsive nowrap"
                cellspacing="0"
                width="100%"
              >
                <thead>
                  <tr>
                    <th>#</th>
                    <th>UID</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% if(tracks.length>0) {tracks.forEach((track, index) => { %>
                  <tr>
                    <td><%= index + 1 %></td>
                    <td><%= track.track_id %></td>
                    <td><%= track.track_name %></td>
                    <td><%= track.description %></td>
                    <td>
                      <a class="text-info" href="/track/details/<%= track.track_id %>">View</a>
                      | <a href="/track/edit/<%= track.track_id %>">Edit</a> |

                      <a class="text-danger" href="/track/delete/<%= track.track_id %>">Delete</a>
                    </td>
                  </tr>
                  <% });} else { %>
                  <tr>
                    No record found
                  </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  $(document).ready(function() {
    $('#datatable-tracks').DataTable({
      columnDefs: [
        {
          targets: [1],
          visible: false,
          searchable: false,
        },
        {
          targets: [-1],
          searchable: false,
          orderable: false,
        },
      ],
    });
  });
</script>
