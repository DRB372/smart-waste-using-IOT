<div class="row">
  <div class="col-md-12 col-sm-12">
    <div class="x_panel">
      <div class="x_title">
        <h2><%= toProperCase(title) %><small>Track Details</small></h2>
        <ul class="nav navbar-right panel_toolbox">
          <li>
            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
          </li>
          <li class="dropdown">
            <a
              href="#"
              class="dropdown-toggle"
              data-toggle="dropdown"
              role="button"
              aria-expanded="false"
              ><i class="fa fa-cog" aria-hidden="true"></i
            ></a>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
              <a class="dropdown-item" href="/track/edit/<%= track.track_id %>"
                >Edit Details</a
              >
              <a class="dropdown-item" href="/track/delete/<%= track.track_id %>">Delete</a>
            </div>
          </li>
          <li>
            <a class="close-link" href="/track"><i class="fa fa-close"></i></a>
          </li>
        </ul>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <ul class="nav nav-tabs bar_tabs" id="myTab" role="tablist">
          <li class="nav-item">
            <a
              class="nav-link active"
              id="home-tab"
              data-toggle="tab"
              href="#home"
              role="tab"
              aria-controls="home"
              aria-selected="true"
              >Home</a
            >
          </li>
          <li class="nav-item">
            <a
              class="nav-link"
              id="profile-tab"
              data-toggle="tab"
              href="#profile"
              role="tab"
              aria-controls="profile"
              aria-selected="false"
              >Bins</a
            >
          </li>
                  </ul>
        <div class="tab-content" id="myTabContent">
          <div
            class="tab-pane fade show active"
            id="home"
            role="tabpanel"
            aria-labelledby="home-tab"
          >
            <div class="col-md-4 widget widget_tally_box">
              <div class="x_panel fixed_height_200">
                <div class="x_content">
                  
                  <h3 class="name"><%= toProperCase(track.track_name) %></h3>
                  <h6 class="name"><%= toProperCase(track.description) %></h6>

                </div>
              </div>
            </div>

            <div class="col-md-8">
              <div class="x_panel  fixed_height_200">
                <div class="x_content">
                  <table class="table">
                    <tbody>
                      <tr>
                        <th scope="row">Full Name</th>
                        <td><%= toProperCase(track.track_name) %></td>
                      </tr>
                      <tr>
                        <th scope="row">Description </th>
                        <td><%= toProperCase(track.description) %></td>
                      </tr>
                      <tr>
                        <th scope="row">Created At</th>
                        <td><%= track.created_at.toLocaleString() %></td>
                      </tr>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
          <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
            <div class="x_content">
              <div class="row">
                <div class="col-sm-12">
                  <div class="card-box table-responsive"> 
                    <table
                      id="datatable-vehicles"
                      class="table table-striped table-bordered dt-responsive nowrap"
                      cellspacing="0"
                      width="100%"
                    >
                      <thead>
                        <tr>
                          <th>#</th>
                          <th>Bin Id</th>
                          <th>Latitude</th>
                          <th>Longitude</th>
                          <th>Bin Address</th>
                        <th>Actions</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% if(bins.length>0) {bins.forEach((bin, index) => { %>
                        <tr>
                          <td><%= index + 1 %></td>
                          <td><%= bin.bin_id %></td>
                          <td><%= bin.latitude %></td>
                          <td><%= bin.longitude %></td>
                          <td><%= bin.bin_address %></td>

                          <td>
                           
                              <a class="text-danger" href="/allocation/trackBin/delete/<%= bin.track_bin_id %>">Delete</a>
                          
                          </td>
                        </tr>
                        <% })} else { %>
                          <tr>
                            <td style="text-align: center;" colspan="6">No record Found</td>
                          </tr>
                          <% } %>
                      </tbody>
                    </table>      
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
